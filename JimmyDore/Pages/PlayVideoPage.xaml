<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:views="clr-namespace:JimmyDore.Views"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
             ios:Page.UseSafeArea="True"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="JimmyDore.Pages.PlayVideoPage" Title="Player">
    <NavigationPage.HasNavigationBar>False</NavigationPage.HasNavigationBar>
    <ContentPage.Content>
        <Grid BackgroundColor="{StaticResource darkGrey}">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Navigation menu -->
            <views:PlaybackNavigationBarView
                Grid.Row="0"
                Grid.Column="0"
                VerticalOptions="CenterAndExpand"/>
        
            <StackLayout Grid.Row="1" Grid.Column="0">
                <WebView Source="{Binding VideoUrl}" 
                        VerticalOptions="FillAndExpand" 
                        HorizontalOptions="FillAndExpand"
                        />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
